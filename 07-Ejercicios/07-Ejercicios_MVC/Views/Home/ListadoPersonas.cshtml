@model List<_07_Ejercicios_Entidades.Persona>

<div class="text-center">

    <h1>Tabla de personas</h1>

    <table style="border:solid 1px black">
        
            <thead>
                <tr>
                    <td>Nombre</td>
                    <td>Apellidos</td>
                </tr>
            </thead>
            @for (int i = 0; i < Model.Count; i++) {
                <tr>
                    <td style="border:solid 1px black">@Model[i].Nombre</td>
                    <td style="border:solid 1px black">@Model[i].Apellidos</td>
                </tr>
            }
        
    </table>
    
    @Html.ActionLink("Home", "Index", "Home")
</div>