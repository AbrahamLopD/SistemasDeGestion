@model _08_Ejercicio_MVC.Models.ViewModels.EscogerMision

<div class="text-center">
    <form method="post">
        <select id="selectMisiones" name="idMision">
            @for (int i = 0; i < Model.ListadoMisiones.Count; i++)
            {
                <option value="@Model.ListadoMisiones[i].Id">@Model.ListadoMisiones[i].Titulo</option>
            }
        </select>

        <button type="submit">Detalles</button>
    </form>

    <br />
    <h3 id="titulo">@Model.Mision.Titulo</h3>
    @if (Model.Mision.Descripcion != "")
    {
        <p id="descripcion"><b>Descripción:</b> @Model.Mision.Descripcion</p>
    }
    @if (Model.Mision.Credito != 0)
    {
        <p id="credito">Crédito: @Model.Mision.Credito</p>
    }
</div>
